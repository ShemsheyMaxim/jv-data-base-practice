<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>taxi.controller.IndexController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registrationDriver</servlet-name>
        <servlet-class>taxi.controller.create.CreateDriverController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registrationDriver</servlet-name>
        <url-pattern>/drivers/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registrationManufacturer</servlet-name>
        <servlet-class>taxi.controller.create.CreateManufacturerController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registrationManufacturer</servlet-name>
        <url-pattern>/manufacturers/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registrationCar</servlet-name>
        <servlet-class>taxi.controller.create.CreateCarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registrationCar</servlet-name>
        <url-pattern>/cars/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addDriverForCar</servlet-name>
        <servlet-class>taxi.controller.update.AddDriverForCarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addDriverForCar</servlet-name>
        <url-pattern>/cars/add-driver</url-pattern>
    </servlet-mapping>
</web-app>
